menu "MagicEyes MMSP2 Implementations"
depends on ARCH_MMSP2

choice
	prompt "Select target board"

config MACH_GP2X
	bool "GP2X Portable Console"
	select MMSP2_SHADOW_ENABLE
	help
	  Say Y here if you intend to run this kernel on the GameparkHoldings GP2X portable console.
endchoice

endmenu

config MMSP2_SHADOW_ENABLE
	depends on ARCH_MMSP2
	bool  "Enable Shadow Config Pin"
	help
	  Enable support for Shadow Config Pin of the CPU (Memory Configuration)

